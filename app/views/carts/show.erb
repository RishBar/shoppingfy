
<section class="cart-show">

<header class="page-header">
  <h1>My Cart</h1>
</header>

<div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% enhanced_cart(@store).each do |item| %>
        <tr>
          <td>
            <h4><%= item[:product].name %></h4>
            <br>
            <p><%= item[:product].description %></p>
          </td>
          <td>
            <%= button_to remove_item_store_cart_path(store_id: @store.id, product_id: item[:product].id), class: 'btn btn-xs btn-danger' do %> - <% end %>
            <%= item[:quantity] %>
            <%= button_to add_item_store_cart_path(store_id: @store.id, product_id: item[:product].id), class: 'btn btn-xs btn-success' do %> + <% end %>
          </td>
          <td>
          <%= item[:product].price_cents / 100 %>
          </td>
          <td>
            <%= item[:product].price_cents * item[:quantity] / 100 %>
          </td>
        </tr>

      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">
          TOTAL:
        </th>
        <th>
          <%= cart_subtotal_cents(@store) / 100.0 %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>

<% if false %>
  <div class="row">
    <div class="col-xs-12">
      <%= form_tag orders_path do %>
        <script
          src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-amount="<%= cart_subtotal_cents %>"
          data-name="Jungle"
          data-description="Khurram Virani's Jungle Order"
          data-locale="auto"
          data-email="kvirani@gmail.com"
          data-currency="cad">
        </script>
      <% end %>
    </div>
  </div>
<% end %>

</section>

